<% include ../partials/header %> 
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To OZGoodDay!</h1>
             <p>View our good items</p>
             <p>
                <a class="btn btn-primary btn-large" href="/items/new">Add New item</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% items.forEach(function(item){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <div class="caption">
                       <h4><%= item.name %></h4>
                   </div>
                   <div class="caption">
                    <h4><%= item.price %></h4>
                    </div>
                   <p>
                       <a href="/items/<%= item._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
